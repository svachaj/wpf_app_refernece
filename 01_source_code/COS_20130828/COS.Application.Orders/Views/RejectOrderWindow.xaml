<telerik:RadWindow x:Class="COS.Application.Orders.Views.RejectOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Header="{DynamicResource rep_ordRejectOrder}" Height="380" Width="480"  WindowStartupLocation="CenterOwner" ResizeMode="NoResize" telerik:StyleManager.Theme="Expression_Dark"  >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <TextBox VerticalContentAlignment="Top" HorizontalContentAlignment="Left" x:Name="tbMain" TextWrapping="Wrap" AcceptsReturn="True" telerik:StyleManager.Theme="Expression_Dark" Width="450" Height="300"></TextBox>
        <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center">
            <telerik:RadButton Content="{DynamicResource rep_ordOk}"  telerik:StyleManager.Theme="Expression_Dark" Margin="5" Width="75" Click="btnOK_click"></telerik:RadButton>
            <telerik:RadButton Content="{DynamicResource rep_ordCancel}" telerik:StyleManager.Theme="Expression_Dark" Margin="5" Width="75" Click="btnCancel_click"></telerik:RadButton>
        </StackPanel>
    </Grid>
</telerik:RadWindow>
