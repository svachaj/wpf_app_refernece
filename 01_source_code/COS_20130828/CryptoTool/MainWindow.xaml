<Window x:Class="CryptoTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="980" ResizeMode="NoResize">
    <Grid>
        <Button Content="Crypt" Height="23" HorizontalAlignment="Left" Margin="125,242,0,0" Name="btnCrypt" VerticalAlignment="Top" Width="75" Click="btnCrypt_Click" />
        <Button Content="Decrypt" Height="23" HorizontalAlignment="Left" Margin="284,242,0,0" Name="btnDecrypt" VerticalAlignment="Top" Width="75" Click="btnDecrypt_Click" />
        <TextBox Height="56" HorizontalAlignment="Left" Margin="33,42,0,0" Name="tbxDecrypted" VerticalAlignment="Top" Width="896" AcceptsReturn="True" />
        <TextBox AcceptsReturn="True" Height="56" HorizontalAlignment="Left" Margin="33,149,0,0" Name="tbxCrypted" VerticalAlignment="Top" Width="896" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="33,13,0,0" Name="textBlock1" Text="Decrypt string" VerticalAlignment="Top" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="33,120,0,0" Name="textBlock2" Text="Crypt string" VerticalAlignment="Top" />
    </Grid>
</Window>
